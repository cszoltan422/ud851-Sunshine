<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--Within forecast_list_item.xml //////////////////////////////////////////////////////////////-->
    <!--Add a layout for an item in the list called forecast_list_item.xml - DONE-->
    <!--Make the root of the layout a vertical LinearLayout - DONE-->
    <!--Set the width of the LinearLayout to match_parent and the height to wrap_content - DONE-->

    <!--Add a TextView with an id @+id/tv_weather_data - DONE-->
    <!--Set the text size to 22sp - DONE-->
    <!--Make the width and height wrap_content - DONE-->
    <!--Give the TextView 16dp of padding - DONE-->
    <TextView
        android:id="@+id/tv_weather_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:padding="16dp" />

    <!--Add a View to the layout with a width of match_parent and a height of 1dp - DONE-->
    <!--Set the background color to #dadada - DONE-->
    <!--Set the left and right margins to 8dp - DONE-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dadada"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />
    <!--Within forecast_list_item.xml //////////////////////////////////////////////////////////////-->

</LinearLayout>